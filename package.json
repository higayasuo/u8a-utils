{
  "name": "u8a-utils",
  "version": "1.0.4",
  "description": "A collection of utility functions for working with Uint8Arrays in TypeScript",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run typecheck && vite build",
    "test": "vitest --run",
    "typecheck": "tsc --noEmit",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm test && npm run build"
  },
  "keywords": [
    "uint8array",
    "utils",
    "typescript"
  ],
  "author": "higayasuo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/higayasuo/u8a-utils.git"
  },
  "bugs": {
    "url": "https://github.com/higayasuo/u8a-utils/issues"
  },
  "homepage": "https://github.com/higayasuo/u8a-utils#readme",
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitest/coverage-v8": "^3.1.1",
    "typescript": "^5.8.3",
    "vite": "^6.2.6",
    "vite-plugin-dts": "^3.7.3",
    "vitest": "^3.1.1"
  },
  "peerDependencies": {
    "base64-js": "^1.5.1"
  }
}
